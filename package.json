{
  "name": "htmx-forms",
  "version": "1.0.0",
  "description": "Form validation with HTMX and styled using Tailwind",
  "main": "index.js",
  "scripts": {
    "dev:css": "tailwindcss -i src/styles.css -o public/index.css",
    "dev:app": "esbuild src/app.ts --bundle --platform=node --packages=external --sourcemap --outfile=dist/index.js --watch",
    "dev:server": "IS_LOCAL=true nodemon dist/index.js",
    "dev": "run-p dev:*",
    "build": "esbuild src/app.ts --bundle --minify --platform=node --packages=external --sourcemap --outfile=dist/index.js",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "Ryan",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.1",
    "daisyui": "^4.4.2",
    "esbuild": "^0.19.5",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@kitajs/html": "^3.0.8",
    "express": "4.18.2"
  }
}
